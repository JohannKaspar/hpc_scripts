#!/bin/bash
#SBATCH --job-name=uv_sync         # Job name
#SBATCH --output=logs/uv_sync.out       # Output file
#SBATCH --error=logs/uv_sync.err        # Error file
#SBATCH --time=04:00:00            # Time limit (hh:mm:ss)
#SBATCH --ntasks=1                 # Number of tasks
#SBATCH --cpus-per-task=4          # Number of CPU cores per task
#SBATCH --mem=8G                   # Memory per node (4 GB in this case)

# Activate the virtual environment
source ~/work/.venv_voice_biomarker/bin/activate

# Navigate to the target directory
cd ~/voice_biomarker

# Run the desired command
uv sync
